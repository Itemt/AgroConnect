# Clave secreta para desarrollo
SECRET_KEY="django-insecure-local-secret-key-for-agroconnect"

# Activa el modo DEBUG para ver errores detallados en local
DEBUG=True

# Hosts permitidos para desarrollo local
ALLOWED_HOSTS=127.0.0.1,localhost

# URL de conexión a tu base de datos PostgreSQL LOCAL
# RECUERDA: Cambia 'TU_CONTRASEÑA' por la contraseña que pusiste al instalar PostgreSQL.
# El usuario 'postgres' y el nombre de la base de datos 'agroconnect_db' deben coincidir con lo que creaste.
DATABASE_URL="postgresql://postgres:admin123@localhost:5432/agroconnect_db"

# Configuración de idioma y zona horaria para local (puedes cambiarla)
LANGUAGE_CODE=es-es
TIME_ZONE=America/Bogota